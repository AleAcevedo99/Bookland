<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Bookland" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/primary_btn</item>
        <item name="colorPrimaryVariant">@color/primary_btn</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/secondary_btn</item>
        <item name="colorSecondaryVariant">@color/secondary_btn</item>
        <item name="colorOnSecondary">@color/white</item>

        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <item name="actionOverflowButtonStyle">@style/MyOverflowButtonStyle</item>
        <!-- Customize your theme here. -->
        <item name="autoCompleteTextViewStyle">@style/SearchAutoCompleteTextView</item>
    </style>
    <style name="MyOverflowButtonStyle" parent="Widget.AppCompat.ActionButton.Overflow">
        <item name="android:tint">@color/white</item>
    </style>
    <style name="Theme.PopupOverlay.Menu" parent="ThemeOverlay.AppCompat.Light" >
        <item name="android:textColor">@color/black</item>
        <item name="android:editTextColor">@android:color/white</item>
        <item name="android:textColorHint">@android:color/white</item>
        <item name="android:tint">@color/white</item>
    </style>
    <style name="Theme.Bookland.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>
    <style name="SearchAutoCompleteTextView" parent="Widget.AppCompat.Light.AutoCompleteTextView">
        <item name="android:textColor">@color/white</item>
        <item name="android:textColorHint">@color/white</item>
    </style>


</resources>